<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <declare-styleable name="XSuperTitleBar" tools:ignore="ResourceName">

        <!--左标题文本-->
        <attr name="titlebar_left_text" format="string" />
        <!--左标题文本大小-->
        <attr name="titlebar_left_text_size" format="dimension" />
        <!--左标题文本颜色-->
        <attr name="titlebar_left_text_color" format="color" />
        <!--左标题图标-->
        <attr name="titlebar_left_icon" format="reference" />
        <!--左标题图标背景-->
        <attr name="titlebar_left_background" format="reference|color" />
        <!--左标题图标与文本的边距-->
        <attr name="titlebar_left_drawable_padding" format="dimension" />

        <!--右标题文本-->
        <attr name="titlebar_right_text" format="string" />
        <!--右标题文本大小-->
        <attr name="titlebar_right_text_size" format="dimension" />
        <!--右标题文本颜色-->
        <attr name="titlebar_right_text_color" format="color" />
        <!--右标题图标-->
        <attr name="titlebar_right_icon" format="reference" />
        <!--右标题图标背景-->
        <attr name="titlebar_right_background" format="reference|color" />
        <!--右标题图标与文本的边距-->
        <attr name="titlebar_right_drawable_padding" format="dimension" />

        <!--标题文本-->
        <attr name="titlebar_title" format="string" />
        <!--标题文本大小-->
        <attr name="titlebar_title_text_size" format="dimension" />
        <!--标题文本颜色-->
        <attr name="titlebar_title_text_color" format="color" />
        <!--副标题文本-->
        <attr name="titlebar_subtitle_text" format="string" />
        <!--副标题文本大小-->
        <attr name="titlebar_subtitle_text_size" format="dimension" />
        <!--副标题文本颜色-->
        <attr name="titlebar_subtitle_text_color" format="color" />
        <!--主标题与副标题边距-->
        <attr name="titlebar_title_margin" format="dimension" />


        <!--底部分割线是否可见-->
        <attr name="titlebar_line_visible" format="boolean" />
        <!--底部分割线背景-->
        <attr name="titlebar_line_background" format="reference|color" />
        <!--底部分割线高度-->
        <attr name="titlebar_line_height" format="dimension" />

        <!--左右标题条目的左右内边距-->
        <attr name="titlebar_child_left_right_padding" format="dimension" />

    </declare-styleable>


</resources>
