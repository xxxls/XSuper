<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Base application theme. -->
    <style name="base_AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/base_colorPrimary</item>
        <item name="colorPrimaryDark">@color/base_colorPrimaryDark</item>
        <item name="colorAccent">@color/base_colorAccent</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowBackground">@color/base_color_theme_background</item>
        <item name="android:screenOrientation">portrait</item>
    </style>


    <!-- Base application theme. 透明 -->
    <style name="base_AppTheme_Transparent" parent="base_AppTheme">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsTranslucent">true</item>
    </style>

    <!-- 默认标题栏 -->
    <style name="base_TitleBar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <!--左标题文本颜色-->
        <item name="titlebar_left_text_color">@color/base_color_8D8B9B</item>
        <!--左标题文本大小-->
        <item name="titlebar_left_text_size">16sp</item>
        <!--右标题文本颜色-->
        <item name="titlebar_right_text_color">@color/base_color_8D8B9B</item>
        <!--右标题文本大小-->
        <item name="titlebar_right_text_size">16sp</item>
        <!--主标题文本颜色-->
        <item name="titlebar_title_text_color">@color/base_color_8D8B9B</item>
        <!--主标题文本大小-->
        <item name="titlebar_title_text_size">18sp</item>
        <!--副标题文本颜色-->
        <item name="titlebar_subtitle_text_color">@color/base_color_8D8B9B</item>
        <!--副标题文本大小-->
        <item name="titlebar_subtitle_text_size">12sp</item>
        <!--主标题与副标题的间距-->
        <item name="titlebar_title_margin">2dp</item>
        <!--左标题图片与文本间距-->
        <item name="titlebar_left_drawable_padding">2dp</item>
        <!--右标题图片与文本间距-->
        <item name="titlebar_right_drawable_padding">2dp</item>
        <!--左右条目的左右内间距-->
        <item name="titlebar_child_left_right_padding">16dp</item>
        <!--分割线可见性-->
        <item name="titlebar_line_visible">true</item>
        <!--分割线背景-->
        <item name="titlebar_line_background">@color/base_color_8D8B9B</item>
        <!--分割线高度-->
        <item name="titlebar_line_height">3dp</item>
    </style>


    <!-- 默认标题栏 -->
    <style name="base_TitleBar_HasBack" parent="base_TitleBar">
        <!--左标题图标-->
        <item name="titlebar_left_icon">@android:drawable/ic_menu_close_clear_cancel</item>
    </style>

    <!--   宽高  -->
    <style name="base_WW">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <!--   宽高  -->
    <style name="base_MM">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <!-- 默认水平分割线样式 -->
    <style name="base_Divider_Horizontal">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/base_divider_size</item>
        <item name="android:background">@color/base_color_divider</item>
    </style>

    <!-- 默认垂直分割线样式 -->
    <style name="base_Divider_Vertical">
        <item name="android:layout_width">@dimen/base_divider_size</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@color/base_color_divider</item>
    </style>

    <!--  bottomSheet  -->
    <style name="base_Bottom_Sheet_Dialog" parent="Theme.AppCompat.DayNight.Dialog">
        <!--Dialog的windowFrame框为无-->
        <item name="android:windowFrame">@null</item>
        <!--是否浮现在activity之上-->
        <item name="android:windowIsFloating">true</item>
        <!--是否半透明-->
        <!--        <item name="android:windowIsTranslucent">true</item>-->
        <!--设置dialog的背景，（#00000000）-->
        <item name="android:background">@android:color/transparent</item>
        <!--显示区域背景是否透明，（#00000000）-->
        <item name="android:windowBackground">@android:color/transparent</item>
        <!--就是用来控制灰度的值，当为1时，界面除了我们的dialog内容是高亮显示的，dialog以外的区域是黑色的，完全看不到其他内容，系统的默认值是0.5-->
        <item name="android:backgroundDimAmount">0</item>
        <!--显示区域以外是否使用黑色半透明背景-->
        <item name="android:backgroundDimEnabled">false</item>
        <item name="android:windowAnimationStyle">@style/Animation.Design.BottomSheetDialog</item>
        <!--        <item name="bottomSheetStyle">@style/Widget.Design.BottomSheet.Modal</item>-->
    </style>


    <!--透明弹窗-->
    <style name="base_Dialog_Transparent" parent="Theme.AppCompat.Dialog">
        <!--Dialog的windowFrame框为无-->
        <item name="android:windowFrame">@null</item>
        <!--是否浮现在activity之上-->
        <item name="android:windowIsFloating">true</item>
        <!--是否半透明-->
        <!--        <item name="android:windowIsTranslucent">true</item>-->
        <!--设置dialog的背景，（#00000000）-->
        <item name="android:background">@android:color/transparent</item>
        <!--显示区域背景是否透明，（#00000000）-->
        <item name="android:windowBackground">@android:color/transparent</item>
        <!--就是用来控制灰度的值，当为1时，界面除了我们的dialog内容是高亮显示的，dialog以外的区域是黑色的，完全看不到其他内容，系统的默认值是0.5-->
        <item name="android:backgroundDimAmount">0</item>
        <!--显示区域以外是否使用黑色半透明背景-->
        <item name="android:backgroundDimEnabled">false</item>
        <!--        <item name="android:windowAnimationStyle">@style/base_anim_window</item>-->
    </style>

    <!--  基础弹窗  -->
    <style name="base_Dialog" parent="Theme.AppCompat.DayNight.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.InputMethod</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowNoTitle">true</item>
        <!--        <item name="android:windowCloseOnTouchOutside">false</item>-->
    </style>

    <!--  加载弹窗  -->
    <style name="base_Loading_Dialog" parent="base_Dialog">
        <item name="android:windowAnimationStyle">@null</item>
        <!--设置dialog的背景，（#00000000）-->
        <item name="android:background">@android:color/transparent</item>
        <!--显示区域背景是否透明，（#00000000）-->
        <item name="android:windowBackground">@android:color/transparent</item>
        <!--就是用来控制灰度的值，当为1时，界面除了我们的dialog内容是高亮显示的，dialog以外的区域是黑色的，完全看不到其他内容，系统的默认值是0.5-->
        <item name="android:backgroundDimAmount">0</item>
        <!--显示区域以外是否使用黑色半透明背景-->
        <item name="android:backgroundDimEnabled">false</item>
    </style>


    <!--TextView 没默认边距-->
    <style name="base_TextView_Not_Padding">
        <item name="android:includeFontPadding">false</item>
    </style>


</resources>